#!/usr/bin/env bash
# scan-vmdk - VMDK Entropy Analyzer wrapper
# Maps encrypted vs unencrypted regions in Mario ransomware-encrypted VMDK files.
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [ -f "${SCRIPT_DIR}/venv/bin/activate" ]; then
    source "${SCRIPT_DIR}/venv/bin/activate"
fi
cd "$SCRIPT_DIR"
exec python3 -m tools.vmdk_entropy_analyzer.cli "$@"
